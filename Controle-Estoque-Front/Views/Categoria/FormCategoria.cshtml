<form>
    <fieldset>
        <legend>Adicionar Nova Categoria</legend>
        <div class="row">

            <div class="col-3">
                <label for="Id" class="form-label">Id da Categoria</label>
                <input type="number" id="Id" class="form-control" placeholder="Id-Categoria">
            </div>

            <div class="col-3">
                <label for="NomeCategoria" class="form-label">Nome da Categoria</label>
                <input type="text" id="NomeCategoria" class="form-control" placeholder="Nome-Categoria">
            </div>

            <div class="col-3">
                <label for="StatusCategoria" class="form-label">Status da Categoria</label>
                <input type="text" id="StatusCategoria" class="form-control" placeholder="Status-Categoria">
            </div>

        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>