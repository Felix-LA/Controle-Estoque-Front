@using ControleEstoque.Domain.Models.DataModel;

@{
    ViewData["Title"] = "Listagem de Categorias";
}

@model List<CategoriaViewModel>

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered table-hover border-dark">
  <thead>
    <tr>
      <th scope="col">Nome da Categoria</th>
      <th scope="col">Status da Categoria</th>
    </tr>
  </thead>
  <tbody>
  
    @* <tr>
      <td>Eletronicos</td>
      <td>1</td>
    </tr> *@
 
        @{
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Status</td>
                </tr>
                
            }
        }

  </tbody>
</table>
