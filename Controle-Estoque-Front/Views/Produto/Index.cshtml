@using ControleEstoque.Domain.Models.DataModel;
@{
    ViewData["Title"] = "Listagem de Produtos";
}

@model List<ProdutoViewModel> 

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered table-hover border-dark">
  <thead>
    <tr>
      <th scope="col">Nome do Produto</th>
      <th scope="col">Preço do Produto</th>
      <th scope="col">Quantidade de Produto</th>
      <th scope="col">Nome da Categoria</th>
      <th scope="col">Descrição do Produto</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  
    @* <tr>
      <td>Celular</td>
      <td>9.999</td>
      <td>9</td>
      <td>Eletronicos</td>
      <td>Um celular eletronico</td>
    </tr> *@

        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Categoria.Name</td>
                    <td>@item.Description</td>
                    <td>@Html.RouteLink("Visualizar", "ViewProduto", new {Id = item.Id})</td>
                </tr>
            }
        }
        
        

  </tbody>
</table>
